<?xml version="1.0" encoding="utf-8"?>
<actions>
    <!-- Define the GET_THING built-in intent for searching the wiki -->
    <action intentName="actions.intent.GET_THING">
        <!-- Define query parameter that maps to the "thing" parameter -->
        <parameter name="thing.name">
            <entity-set-reference entitySetId="SearchQuery" />
        </parameter>

        <!-- Fulfillment mapped to VoiceActionHandler deep link -->
        <fulfillment urlTemplate="wiki://search?query={thing.name}" />
    </action>

    <!-- Define the entity set for search queries -->
    <entity-set entitySetId="SearchQuery">
        <!-- Inline entities for common wiki pages -->
        <entity identifier="home" name="home" />
        <entity identifier="index" name="index" />
    </entity-set>
</actions>
