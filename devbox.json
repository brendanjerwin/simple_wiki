{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "ginkgo@latest",
    "buf@latest",
    "markdownlint-cli@latest",
    "evans@latest",
    "grpcurl@latest",
    "podman@latest",
    "rootlesskit@latest",
    "bun@latest",
    "chromium@latest",
    "go-tools@latest",
    "revive@latest",
    "ast-grep@latest",
    "playwright@latest",
    "playwright-driver@latest",
    "playwright-test@latest",
    "gh@latest",
    "golangci-lint@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "fe:test": [
        "./scripts/run_fe_tests.sh $@"
      ],
      "fe:lint": [
        "./scripts/run_fe_lint.sh"
      ],
      "fe:typecheck": [
        "./scripts/run_fe_typecheck.sh"
      ],
      "lint:md": [
        "./scripts/run_lint_md.sh"
      ],
      "go:test": [
        "./scripts/run_go_test.sh"
      ],
      "go:lint": [
        "./scripts/run_go_lint.sh"
      ],
      "go:coverage": [
        "./scripts/run_go_coverage.sh"
      ],
      "go:generate": [
        "./scripts/run_go_generate.sh"
      ],
      "go:deadcode": [
        "./scripts/run_go_deadcode.sh"
      ],
      "lint:everything": [
        "./scripts/run_lint_everything.sh"
      ],
      "build": [
        "./scripts/build.sh $@"
      ],
      "storybook": [
        "cd static/js && bun install && bun run storybook"
      ],
      "storybook:build": [
        "./scripts/run_storybook_build.sh"
      ],
      "e2e:test": [
        "./scripts/run_e2e_test.sh"
      ],
      "e2e:test:headed": [
        "./scripts/run_e2e_test_headed.sh"
      ],
      "e2e:codegen": [
        "cd e2e & playwright codegen --browser=chromium http://localhost:8050/home"
      ],
      "deploy": [
        "./scripts/deploy.sh $@"
      ]
    }
  }
}
