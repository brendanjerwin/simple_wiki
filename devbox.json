{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "ginkgo@latest",
    "buf@latest",
    "markdownlint-cli@latest",
    "evans@latest",
    "grpcurl@latest",
    "podman@latest",
    "rootlesskit@latest",
    "bun@latest",
    "chromium@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "fe:test": [
        "export CHROMIUM_BIN=$(which chromium) && cd static/js && bun install && bun run test:wtr"
      ],
      "lint:md": [
        "markdownlint --fix '**/*.md' --ignore vendor"
      ]
    }
  }
}
